static DEFAULT_CNOISE_SEED_SHIFT1 = 822167:f32;
// TODO: Better colored version?
fn @cperlin2(uv: Vec2, seed: f32) {
    let color = cpnoise2(uv, seed);
    color_mulf(color, perlin2(uv, seed))
}
